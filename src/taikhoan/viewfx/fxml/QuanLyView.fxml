<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="550.0" minWidth="1000.0" prefHeight="550.0" prefWidth="1000.0" stylesheets="@../../css/QuanLy.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="taikhoan.controllerfx.QuanLyController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="top-bar">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label styleClass="top-label" text="Quản lý hệ thống" />
            <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="lblU" alignment="CENTER" prefHeight="36.0" prefWidth="147.0" style="-fx-text-fill: white;" text="Label">
            <font>
               <Font name="System Italic" size="16.0" />
            </font>
         </Label>
            <Button fx:id="btnLogout" onAction="#handleRegister" styleClass="btn-logout" text="Đăng ký" />
         <Button fx:id="btnLogout1" onAction="#handleLogout" styleClass="btn-logout" text="Đăng xuất" />
        </HBox>
    </top>

    <left>
        <VBox prefHeight="449.0" prefWidth="203.0" spacing="10" styleClass="side-menu" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10" left="10" right="10" top="20" />
            </padding>
            <Button fx:id="btnQLPhong" onAction="#handleQLPhong" styleClass="menu-btn" text="Quản lý phòng" />
            <Button fx:id="btnQLNV" onAction="#handleQLNV" styleClass="menu-btn" text="Quản lý đặt trả phòng" />
            <Button fx:id="btnQuanLy" onAction="#handleLogin" styleClass="menu-btn" text="Quản lý khách hàng" />
         <Button fx:id="btnThongKe1" onAction="#handleThanhToan" styleClass="menu-btn" text="thanh toán" />
            <Button fx:id="btnThongKe" onAction="#handleThongKe" styleClass="menu-btn" text="Thống kê - báo cáo" />
            
        </VBox>
    </left>

    <center>
        <TabPane>
            <tabs>
                
                <Tab fx:id="tabKhachHang" onSelectionChanged="#handleTabKhachHangSelected" text="Khách hàng">
            <StackPane>
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <TableView fx:id="tableKhachHang" prefWidth="600">
                    <columns>
                        <TableColumn fx:id="colMa" text="Mã" />
                        <TableColumn fx:id="colTen" prefWidth="177.0" text="Tên" />
                        <TableColumn fx:id="colSDT" prefWidth="162.0" text="SĐT" />
                        <TableColumn fx:id="colEmail" prefWidth="332.0" text="Email" />
                    </columns>
                </TableView>
            </StackPane>
        </Tab>
            </tabs>
        </TabPane>
    </center>

    <right>
        <VBox spacing="10" styleClass="action-pane">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </right>

    <bottom>
        <HBox spacing="10" styleClass="top-bar">
            <padding>
                <Insets bottom="8" left="10" right="10" top="8" />
            </padding>
            <Label styleClass="top-label" text="Báo cáo / Thống kê" />
        </HBox>
    </bottom>
</BorderPane>
