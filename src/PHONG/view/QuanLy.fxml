<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" styleClass="root-pane" stylesheets="@../../taikhoan/css/PHONGquanly.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PHONG.controller.QuanLyController">

    <!-- ================= TOP ================= -->
    <top>
        <AnchorPane styleClass="top-bar">
            <Label styleClass="title-label" text="HỆ THỐNG QUẢN LÝ PHÒNG" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="15" />

            <Button fx:id="btnBack" onAction="#handleBack" styleClass="btn-secondary" text="Trở về" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="15" />
        </AnchorPane>
    </top>

    <!-- ================= LEFT ================= -->
    <left>
        <VBox prefWidth="300" spacing="15" styleClass="side-form">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label styleClass="form-title" text="Thông tin phòng" />

            <TextField fx:id="txtMaPhong" promptText="Mã phòng (vd: P101)" styleClass="form-field" />

            <ComboBox fx:id="cbLoaiPhong" promptText="-- Chọn loại phòng --" styleClass="form-combo" />

            <TextField fx:id="txtGia" promptText="Giá phòng" styleClass="form-field" />

            <ComboBox fx:id="cbTrangThai" promptText="-- Trạng thái --" styleClass="form-combo" />

            <Separator />

            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#handleThem" styleClass="btn-success" text="Thêm" />

                <Button onAction="#handleSua" styleClass="btn-warning" text="Sửa" />

                <Button onAction="#handleXoa" styleClass="btn-danger" text="Xóa" />
            </HBox>

            <Button maxWidth="Infinity" onAction="#handleLamMoi" styleClass="btn-secondary" text="Làm mới biểu mẫu" />
        </VBox>
    </left>

    <!-- ================= CENTER ================= -->
    <center>
        <TableView fx:id="tablePhong" styleClass="modern-table">
            <columns>
                <TableColumn fx:id="colMaPhong" prefWidth="120" text="Mã Phòng" />
                <TableColumn fx:id="colLoaiPhong" prefWidth="160" text="Loại Phòng" />
                <TableColumn fx:id="colGia" prefWidth="160" text="Giá (VNĐ)" />
                <TableColumn fx:id="colTrangThai" prefWidth="160" text="Trạng Thái" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
